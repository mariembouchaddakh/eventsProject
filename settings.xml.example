<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Exemple de configuration Maven settings.xml pour Nexus
    Ã€ placer dans ~/.m2/settings.xml ou dans Jenkins
-->
<settings>
    <servers>
        <server>
            <id>nexus-releases</id>
            <username>admin</username>
            <password>admin123</password>
        </server>
        <server>
            <id>nexus-snapshots</id>
            <username>admin</username>
            <password>admin123</password>
        </server>
    </servers>
    
    <mirrors>
        <mirror>
            <id>nexus</id>
            <mirrorOf>*</mirrorOf>
            <url>http://nexus-server:8081/repository/maven-public/</url>
        </mirror>
    </mirrors>
</settings>

